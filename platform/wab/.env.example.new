# Plasmic Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Basic configuration
HOST=http://localhost:3004
WAB_DBNAME=wab
WAB_DBPASSWORD=SEKRET
DATABASE_URI=postgresql://wab:SEKRET@localhost/wab
SESSION_SECRET=your-session-secret-here

# Mail configuration (optional)
MAIL_CONFIG={"mailFrom":"Plasmic <noreply@yourdomain.com>", "mailUserOps":"ops@yourdomain.com"}

# Admin emails (comma separated)
ADMIN_EMAILS=["admin@yourdomain.com"]

# Sentry (optional)
SENTRY_DSN=

# JWT Configuration
# The encryption key is used for signing and verifying JWT tokens
# This should be the same key used throughout your Plasmic deployment
ENCRYPTION_KEY=your-encryption-key-here

# Other optional configurations
NODE_ENV=development
PORT=3004

# Additional optional config
AMPLITUDE_API_KEY=
INTERCOM_APP_ID=
POSTHOG_API_KEY=
POSTHOG_HOST=
POSTHOG_REVERSE_PROXY_HOST=
SENTRY_ORG_ID=
SENTRY_PROJECT_ID=
STRIPE_PUBLISHABLE_KEY=